class exercise:
    def __init__(self, concentric, eccentric, active, equipment, type):
        self.concentric = concentric #joint actions
        self.eccentric = eccentric   #joint actions
        self.active = active
        self.type = type    # for type use: bilateral, unilateral
        
class barbell(exercise):

class kettlebell(exercise):

class pullup_bar(exercise):

class floor(exercise):

class dumbbell(exercise):




        
push_up = floor("shoulder flexion, elbow extension", "shoulder extension, elbow flexion", "hollow body, posterior pelvic tilt, knee extension, ankle flexion", "bilateral")
pull_up = pullup_bar("shoulder extension, shoulder adduction, elbow flexion", "shoulder flexion, shoulder abduction", "hollow body, posterior pelvic tilt","bilateral")
deadlift = barbell("hip extension, knee extension", "hip flexion, knee flexion", "hollow body, shoulder external rotation, shoulder adduction", "bilateral"
